@model IEnumerable<Vidly2.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (!Model.Any())
{

}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td scope="row">@Html.ActionLink(movie.Title, "Edit", "Movie", new { id = movie.Id }, null)</td>
                    <td scope="row">@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@Html.ActionLink("Add Movie", "Create", "Movie", null, new { @class="btn btn-dark" })
