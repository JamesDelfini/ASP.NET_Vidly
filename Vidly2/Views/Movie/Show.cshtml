@model Vidly2.Models.Movies
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.DatePublish.Value.ToShortDateString()</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>

